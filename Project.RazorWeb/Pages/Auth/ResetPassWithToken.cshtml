@page "/auth/reset-password"

@model Project.RazorWeb.Pages.Auth.ResetPassWithTokenModel
@{
    ViewData["Title"] = "Reset Password";
}

<h2>Reset Password</h2>

<form method="post">
    <input type="hidden" asp-for="Token" />
    
    <div class="form-group">
        <label for="newPassword">New Password:</label>
        <input type="password" id="newPassword" asp-for="NewPassword" class="form-control" required />
    </div>
    
    <div class="form-group">
        <label for="confirmPassword">Confirm Password:</label>
        <input type="password" id="confirmPassword" asp-for="ConfirmPassword" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Reset Password</button>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <p>@Model.Message</p>
    }
</form>
