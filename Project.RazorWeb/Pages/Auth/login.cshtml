@page "/auth/login"

@model Project.RazorWeb.Pages.Auth.loginModel
@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Login</h2>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger text-center">
                            @Model.ErrorMessage
                        </div>
                    }
                    <form method="post" asp-page-handler="Login">
                        <div class="form-group">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control rounded-pill" id="username" asp-for="Username" placeholder="Enter your username" />
                        </div>
                        <div class="form-group mt-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control rounded-pill" id="password" asp-for="Password" placeholder="Enter your password" />
                        </div>

                        <!-- CAPTCHA Image 
                         <div class="form-group mt-3">
                             <label for="captchaCode" class="form-label">Enter CAPTCHA</label>
                             <div class="d-flex align-items-center">
                                 <img src="/auth/login?handler=Captcha" alt="CAPTCHA Image" class="me-2" style="height: 40px;" />
                                 <input type="text" class="form-control rounded-pill" id="captchaCode" asp-for="CaptchaInput" placeholder="Enter the CAPTCHA code" />
                             </div>
                         </div>
                        -->
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary rounded-pill">Login</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <p>Don't have an account? 
                            <a class="btn btn-link" href="/auth/register">Register</a>
                        </p>
                        <p>
                            <a class="btn btn-link" href="/auth/forgotpass">Forgot Password?</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
